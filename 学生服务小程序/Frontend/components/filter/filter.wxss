/* components/filter/filter.wxss */
@import "../../styles/iconfont.wxss"; /*引入图标*/
/*非下拉框*/
.filter_group{
    position: relative;
    width: 100%;
    height: 90rpx;
    display: flex;
    padding: 10rpx;
}
.filter_interfact::before{
    font-size: 32rpx;
    margin: 0 10rpx;
}
.filter_interfact{
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
    color: #757575;
}

/*下拉框*/
.filter_selection_group{
    position: absolute;
    top: 102rpx;
    left: 0;
    width: 100vw;
    animation: fadein .5s;
    z-index: 99;
    background-color: #fff;
}
.srcoll_group{
    position: relative;
    height: 34vh;
}
.filter_item{
    padding: 20rpx;
    border-bottom:2rpx solid #f7f7f7 ;
}
.item_title{
    font-size: 30rpx;
    font-weight: 600;
    padding: 10rpx 20rpx;
    letter-spacing: 1rpx;
}
.item_content{
    display: flex;
    flex-wrap: wrap;
}
.content_selection{
    width: 30%;
    margin: 10rpx;
    padding: 10rpx;
    font-size: 26rpx;
    text-align: center;
    color: #585858;
    background-color: #f5f5f5;
}
/*按钮*/
.button_group{
    position: absolute;
    top: 100%;
    left: 0;
    display: flex;
    width: 100%;
    height: 8vh;
    padding: 10rpx 24rpx;
    justify-content: space-between;
    background-color: #fff;
}
.reset_button{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 46%;
    border: 2rpx solid #f2f2f2;
    background-color: #fff;
    font-size: 32rpx;
}
/* 去除按钮边框 */
.reset_button::after{
    border: none;
}
.confirm_button{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 46%;
    color: #fff;
    background-color: #5284f7;
    font-size: 32rpx;
}
/*激活效果*/
.active{
    color: #5586f6;
    background-color: #edf3fe;
}