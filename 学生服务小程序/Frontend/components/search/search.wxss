/* components/search/search.wxss */
@import "../../styles/iconfont.wxss"; /*引入图标*/
.search_group{
    width: 100%;
    height: 100rpx;
    padding:10px;
    display: flex;
}
.search_input::before{
    font-size: 30rpx;
    margin: 0 10rpx 0 20rpx;
}
.search_input{
    width: 100%;
    height:100%;
    display: flex;
    justify-content: left;
    align-items:center;
    background-color: #f7f7f7;
    border-radius:50rpx;
    color: #818181;
    font-size: 26rpx;
    letter-spacing: 2rpx;
}