/* pages/user/index.wxss */
page{
    background-color: #f7f7f7;
}

/*注册登录*/
.user_information_group{
    height: 25vh;
    background-color: #5284f7;
}
.user_information{
    height: 100%;
    display: flex;
}
.user_profile{
    flex: 1;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
}
.user_profile image{
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
}
.user_confirm{
    position: absolute;
    top: 75%;
    left: 50%;
    transform: translateX(-50%);

    width: 130rpx;
    color: #fff;
    border-radius: 100rpx;
    border: 1rpx solid #fff;
    background-color: #6d93e6;
    text-align: center;
    font-size: 25rpx;
}
.user_privacy{
    flex: 2;
    color: #fff;
    display: flex;
    flex-direction: column;
}
.user_name{
    flex: 1;
    display: flex;
    align-items: flex-end;
    font-size: 36rpx;
    padding: 10rpx;
}
.user_privacy_details{
    flex: 1;
    font-size: 28rpx;
    padding: 10rpx;
}

/*用户板块*/
.user_correlation_group{
    background-color: #fff;
}
/*服务记录板块*/
.user_service_log{
    width: 100%;
    height: 300rpx;
}
/*附加板块*/
.addition_item{
    height: 100rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 32rpx;
    font-size: 28rpx;
    border-bottom: 1rpx solid #f2f2f2;
}