/* pages/repair/index.wxss */
page{
    background-color: #ebeaf0;
}

/*插图*/
.repair_image image{
    background-color: #fff;
    width: 100%;
    height: 30vh;
}

/*报修信息*/
.repair_info_group{
    position: relative;
}
.repair_info{
    position:absolute;
    top: -40rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 92%;
    padding: 60rpx 45rpx;
    border-radius: 20rpx;
    background-color: #fff;
}
.repair_info_item{
    margin: 28rpx;
    border-bottom:2rpx solid #f0f0f0;
    font-size: 28rpx;
}
.item_content{
    padding: 28rpx 0;
}
button{
    margin: 28rpx;
    font-size: 32rpx;
    color:#fff;
    background-color: #5284f5;
}
.history_repair_infor{
    display: flex;
    justify-content: center;
    align-items: center;
}
.history_repair_infor navigator{
    font-size: 24rpx;
    font-weight: 400;
    color: var(--themeColor);
}

/*注意事项*/
.repair_note{
    margin:28rpx;
    font-size: 24rpx;
    color: #9d9d9d;
    letter-spacing: 1rpx;
    line-height: 45rpx;
}
.title_text::before{
    font-size: 32rpx;
}
.title_text{
    margin-left: 10rpx;
    font-size: 24rpx;
}
.content_item{
    padding:0 10rpx 0 40rpx;
}