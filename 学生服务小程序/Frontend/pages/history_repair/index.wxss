.history_repairInfo_group{
    padding: 20rpx 15rpx;
    background-color: #ffffff;
}
.repairInfo_item{
    margin-bottom: 20rpx;
    border:3rpx solid #ecebeb;
    border-radius: 14rpx;
    background-color: #fff;
}
.repairInfo_item:last-child{
    margin-bottom: 0;
}
.item_title{
    padding: 20rpx 30rpx;
    display: flex;
    justify-content: space-between;
    font-size: 26rpx;
    border-bottom: 4rpx dashed #ecebeb;
}
.item_content{
    border-bottom: 4rpx dashed #ecebeb;
}
.item_line{
    display: flex;
    justify-content: space-between;
    padding: 10rpx 30rpx;
    display: flex;
    font-size: 26rpx;
}
.repairInfo_dispose_group{
    display: flex;
}
.repairInfo_modification{
    flex: 1;
    color: var(--themeColor);
    padding:20rpx 0;
    text-align: center;
    font-size: 30rpx;
    border-right: 4rpx dashed #ecebeb;
}
.repairInfo_backout{
    flex: 1;
    color: red;
    padding: 20rpx 0;
    text-align: center;
    font-size: 30rpx;
}
.repairInfo_appeal_group{
    color: red;
    padding: 20rpx 0;
    text-align: center;
    font-size: 30rpx;
}